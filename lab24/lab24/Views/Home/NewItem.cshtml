
@{
    ViewBag.Title = "NewItem";
}

<h2>Add a new Item</h2>

<form action="/Home/SaveNewItem" method="post">
<label>Item Name:</label> <input type="text" name="name" class="form-control"/>
<label> Description: </label> <input type="text" name="description" class="form-control"/>
<label> Quantity: </label> <input type="number" min="1" max="20" name="quantity" class="form-control" />
<label> Price: </label> <input type="number" step=".01" name="price" class="form-control" />
<input type="submit" value="Save!" class="form-control"/>
<input type="reset" />
@Html.AntiForgeryToken()
</form>
